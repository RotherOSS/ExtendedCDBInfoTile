<!-- start -->
<div class="MainBox ARIARoleMain LayoutFixedSidebar SidebarFirst">
    <h1 class="InvisibleText">[% Translate("Customer Dashboard Info Tile") | html %]</h1>

    [% BreadcrumbPath = [
            {
                Name => Translate("Customer Dashboard Info Tile Management"),
                Link => Env("Action"),
            },
        ]
    %]

    [% INCLUDE "Breadcrumb.tt" Path = BreadcrumbPath %]

    <div class="Clear"></div>
    <div class="SidebarColumn">

        <div class="WidgetSimple">
            <div class="Header">
                <h2>[% Translate("Actions") | html %]</h2>
            </div>
            <div class="Content">
                <ul class="ActionList">
                    <li>
                        <a href="[% Env("Baselink") %]Action=[% Env("Action") %];Subaction=CustomerDashboardInfoTileNew" class="CallForAction Fullsize Center Create"><span><i class="fa fa-plus-square"></i>[% Translate("Create new Info Tile Entry") | html %]</span></a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="WidgetSimple">
            <div class="Header">
                <h2><label for="FilterInfoTileEntries">[% Translate("Filter for Info Tile Entries") | html %]</label></h2>
            </div>
            <div class="Content">
                <input type="text" id="FilterInfoTileEntries" class="FilterBox" placeholder="[% Translate("Just start typing to filter...") | html %]" name="FilterInfoTileEntries" value="" title="[% Translate("Filter for info tile entries") | html %]">
            </div>
        </div>
        <div class="WidgetSimple">
            <div class="Header">
                <h2>[% Translate("Hint") | html %]</h2>
            </div>
            <div class="Content">
                <p class="FieldExplanation">
                    [% Translate("Create a new entry to be displayed on the info tile on the customer dashboard.") | html %]
                </p>
            </div>
        </div>

    </div>

    <div class="ContentColumn">
        <div class="WidgetSimple">

            <div class="Header">
                <h2>[% Translate("List") | html %]</h2>
            </div>
            <div class="Content">
                <table class="DataTable" id="InfoTileEntries">
                    <thead>
                        <tr>
                            <th>[% Translate("Start date") | html %]</th>
                            <th>[% Translate("Stop date") | html %]</th>
                            <th>[% Translate("Permission") | html %]</th>
                            <th>[% Translate("Heading") | html %]</th>
                            <th>[% Translate("Content") | html %]</th>
                            <th class="Center">[% Translate("Delete") | html %]</th>
                        </tr>
                    </thead>
                    <tbody>
[% RenderBlockStart("ViewRow") %]
                        <tr [% IF Data.ValidID != "valid"%]class="Invalid"[% END %]>
                            <td>
                                <a class="AsBlock" href="[% Env("Baselink") %]Action=AdminCustomerDashboardInfoTile;Subaction=CustomerDashboardInfoTileEdit;InfoTileID=[% Data.ID | uri %]">[% Data.StartDateTimeStamp | html %]</a>
                            </td>
                            <td>
                                <a class="AsBlock" href="[% Env("Baselink") %]Action=AdminCustomerDashboardInfoTile;Subaction=CustomerDashboardInfoTileEdit;InfoTileID=[% Data.ID | uri %]">[% Data.StopDateTimeStamp | html %]</a>
                            </td>
                            <td>[% Data.Permission | html %]</td>
                            <td>[% Data.Heading | truncate(80) | html %]</td>
                            <td>[% Data.Content | truncate(80) | html %]</td>
                            <td>[% Translate(Data.ValidID) | html %]</td>

                            <td class="Center">
                                <a class="TrashCan CustomerDashboardInfoInfoTileDelete" href="[% Env("Baselink") %]Action=[% Env("Action") %];Subaction=Delete;InfoTileID=[% Data.ID | uri %];[% Env("ChallengeTokenParam") | html %]" title="[% Translate("Delete Info Tile Entry") | html %]">
                                    <i class="fa fa-trash-o"></i>
                                    <span class="InvisibeText">[% Translate("Delete Info Tile Entry") | html %]</span>
                                </a>
                            </td>
                        </tr>
[% RenderBlockEnd("ViewRow") %]

[% RenderBlockStart("NoDataRow") %]
                        <tr>
                            <td colspan="5">
                                [% Translate("No data found.") | html %]
                            </td>
                        </tr>
[% RenderBlockEnd("NoDataRow") %]

                        <tr class="FilterMessage Hidden">
                            <td colspan="5">[% Translate("No matches found.") | html %]</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="Clear"></div>
</div>

<!-- end -->
